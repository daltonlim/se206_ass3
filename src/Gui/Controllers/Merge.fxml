<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" stylesheets="@../../resources/FlatBee.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.Controllers.MergeController">
    <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label contentDisplay="RIGHT" text="Search:" />
            <ComboBox fx:id="cb" editable="true" onAction="#comboBox" onKeyReleased="#comboBox" prefWidth="300.0" />
            <Button mnemonicParsing="false" onAction="#searchNames" text="Add" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="databaseSelect1" mnemonicParsing="false" onAction="#addDatabase" prefHeight="20.0" prefWidth="30.0" text="+" />
                        <Label text="Available Names" />
                        <Button mnemonicParsing="false" prefHeight="20.0" prefWidth="30.0" text="-" visible="false" />
                     </children>
                  </HBox>
                  <ListView fx:id="availibleNamesList" onMouseClicked="#addName" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#fileChooser" prefHeight="13.0" prefWidth="40.0">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../resources/icons/import.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                        <Label text="Chosen Names" />
                        <Button mnemonicParsing="false" onAction="#exportNames">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../resources/icons/export.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                     </children>
                  </HBox>
                  <ListView fx:id="selectedNames" onMouseClicked="#removeName" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#exit" text="Back" />
            <Button fx:id="selectNamesButton" mnemonicParsing="false" onAction="#getPlayerGuiScene" prefWidth="140.0" stylesheets="@../../resources/darkButton.css" text="Select Names" />
         </children>
      </HBox>
    </children>
</VBox>
