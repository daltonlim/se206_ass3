<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.SelectionMenu.RecordGuiController">
   <children>
      <Label prefHeight="18.0" prefWidth="258.0" text="You can record your own version for">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="nameLabel" alignment="CENTER" prefHeight="52.0" prefWidth="180.0" textAlignment="CENTER" textFill="#f50202">
         <font>
            <Font size="34.0" />
         </font>
      </Label>
      <Label fx:id="States" prefHeight="15.0" prefWidth="200.0" />
      <ProgressBar fx:id="progressbar" prefWidth="200.0" progress="0.0" />
      <Button fx:id="recordButton" mnemonicParsing="false" onAction="#record" prefHeight="25.0" prefWidth="296.0" text="Record" />
      <HBox>
         <children>
            <Button fx:id="PlayOldButton" mnemonicParsing="false" onAction="#playOld" prefHeight="25.0" prefWidth="296.0" text="Play orgiginal recording" />
            <Button fx:id="PlayYoursButton" mnemonicParsing="false" onAction="#playNew" prefHeight="25.0" prefWidth="296.0" text="Play recorded recording" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Button fx:id="SaveButton" mnemonicParsing="false" onAction="#save" prefHeight="25.0" prefWidth="296.0" text="Save and Exit" />
            <Button fx:id="NoSaveButton" mnemonicParsing="false" onAction="#nosave" prefHeight="25.0" prefWidth="296.0" text="Discard and Exit" />
         </children>
      </HBox>
      <Button fx:id="RestartButton" mnemonicParsing="false" onAction="#restart" prefHeight="25.0" prefWidth="296.0" text="Restart" />
      <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#exit" prefHeight="25.0" prefWidth="296.0" text="Exit" />
   </children>
</VBox>
