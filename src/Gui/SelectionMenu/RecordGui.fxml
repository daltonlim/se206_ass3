<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../../resources/FlatBee.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.SelectionMenu.RecordGuiController">
   <children>
      <Label alignment="CENTER" prefHeight="18.0" prefWidth="258.0" text="You are currently recording for">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="nameLabel" alignment="CENTER" prefHeight="52.0" prefWidth="180.0" textAlignment="CENTER" textFill="#f50202">
         <font>
            <Font size="34.0" />
         </font>
      </Label>
      <Label fx:id="States" prefHeight="15.0" prefWidth="200.0" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <ProgressBar fx:id="progressbar" prefWidth="170.0" progress="0.0" />
            <Button fx:id="recordButton" mnemonicParsing="false" onAction="#record" text="Record" />
         </children>
      </HBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Button fx:id="PlayOldButton" mnemonicParsing="false" onAction="#playOld" prefWidth="110.0" text="Play orginal" />
                        <Button fx:id="SaveButton" mnemonicParsing="false" onAction="#save" prefWidth="110.0" text="Save and Exit" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Button fx:id="PlayYoursButton" mnemonicParsing="false" onAction="#playNew" prefWidth="130.0" text="Play recorded" />
                        <Button fx:id="NoSaveButton" mnemonicParsing="false" onAction="#nosave" prefWidth="130.0" text="Discard and Exit" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="RestartButton" mnemonicParsing="false" onAction="#restart" prefWidth="110.0" text="Restart" />
            <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#exit" text="Exit" />
         </children>
      </VBox>
   </children>
</VBox>
