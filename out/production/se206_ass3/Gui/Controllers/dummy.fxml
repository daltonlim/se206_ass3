<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../../resources/FlatBee.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.Controllers.dummy">
   <children>
      <Label alignment="CENTER" prefHeight="18.0" prefWidth="256.0" text="You are currently recording for">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="nameLabel" contentDisplay="RIGHT" prefHeight="52.0" prefWidth="177.0" text="Name" textAlignment="JUSTIFY" textFill="#f50202">
         <font>
            <Font size="34.0" />
         </font>
         <graphic>
            <Button fx:id="PlayOldButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#playOld" prefHeight="25.0" prefWidth="28.0" style="-fx-background-color: transparent;" text="◀️" />
         </graphic>
      </Label>
      <Label fx:id="States" prefHeight="15.0" prefWidth="200.0" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <ProgressBar fx:id="progressbar" prefWidth="170.0" progress="0.0" />
         </children>
      </HBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <HBox>
                           <children>
                              <Button fx:id="recordButton" mnemonicParsing="false" onAction="#record" prefHeight="45.0" prefWidth="13.0" style="-fx-background-color: transparent;" text="⚫" textFill="#f20606">
                                 <font>
                                    <Font size="24.0" />
                                 </font></Button>
                              <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopRecording" prefHeight="6.0" prefWidth="47.0" style="-fx-background-color: transparent;" text="⬛">
                                 <font>
                                    <Font size="24.0" />
                                 </font></Button>
                              <Button fx:id="PlayYoursButton" mnemonicParsing="false" onAction="#playNew" prefHeight="45.0" prefWidth="39.0" style="-fx-background-color: transparent;" text="▶️">
                                 <font>
                                    <Font size="24.0" />
                                 </font></Button>
                              <Button fx:id="RestartButton" mnemonicParsing="false" onAction="#restart" prefHeight="50.0" prefWidth="0.0" style="-fx-background-color: transparent;" text="⚫">
                                 <font>
                                    <Font size="24.0" />
                                 </font></Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="10.0" />
               </children>
            </HBox>
            <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#exit" text="Exit" />
         </children>
      </VBox>
   </children>
</VBox>
