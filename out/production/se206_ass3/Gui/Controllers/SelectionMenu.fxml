<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10.0" stylesheets="@../../resources/FlatBee.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Gui.Controllers.SelectionMenuController">
    <children>
        <Group>
         <children>
            <HBox spacing="10.0">
               <children>
                  <ToggleButton fx:id="singleButton" mnemonicParsing="false" onAction="#setSingle" selected="true" text="Single">
                     <toggleGroup>
                        <ToggleGroup fx:id="fileSelection" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="OrderedButton" mnemonicParsing="false" onAction="#setOrdered" text="Ordered List" toggleGroup="$fileSelection" />
                  <ToggleButton fx:id="RandomisedButton" mnemonicParsing="false" onAction="#setRandomised" text="Randomised List" toggleGroup="$fileSelection" />
               </children>
            </HBox>
         </children>
        </Group>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label contentDisplay="RIGHT" text="Add a name:" />
            <TextField fx:id="searchField" prefHeight="26.0" prefWidth="239.0" />
            <Button mnemonicParsing="false" onAction="#searchNames" text="Add" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Available Names" />
                  <ListView fx:id="availibleNamesList" onMouseClicked="#addName" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Names to Play" />
                  <ListView fx:id="selectedNames" onMouseClicked="#removeName" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="databaseSelect" mnemonicParsing="false" onAction="#fileChooser" prefWidth="140.0" text="Import Names" />
            <Button fx:id="selectNamesButton" mnemonicParsing="false" onAction="#getPlayerGuiScene" prefWidth="140.0" text="Select Names" />
            <Button fx:id="databaseSelect1" layoutX="113.0" layoutY="10.0" mnemonicParsing="false" onAction="#addDatabase" prefWidth="140.0" text="Add Database" />
         </children>
      </HBox>
    </children>
</VBox>
